$(document).on('click', '.ui-autocomplete .ui-menu-item', function(event) {
  var dummyLink = $('.js-dummy-link')[0];

  var queryId = event.target.textContent,
      queryType = 'packages';

  var replaceId = "dummy_id",
      replaceType = "dummies";

  var oldUrl = dummyLink.href,
      newUrl = oldUrl.replace(replaceId, queryId).replace(replaceType, queryType);

  dummyLink.href = newUrl;
  dummyLink.click();
});

$(document).on('click', '.js-show-more-toggle', function(event) {
  var toggledDiv = event.currentTarget,
      sisterNode = toggledDiv.parentElement.getElementsByClassName('cs-link-icon')[0],
      toggledClass = 'js-show-more-toggle__toggled';

  if ( toggledDiv.classList.contains(toggledClass ) ) {
    toggledDiv.classList.remove(toggledClass);
    sisterNode.classList.remove('hidden');
    toggledDiv.classList.add('col-xs-10');
    toggledDiv.classList.remove('cs-full-width');
  } else {
    toggledDiv.classList.add(toggledClass);
    sisterNode.classList.add('hidden');
    toggledDiv.classList.remove('col-xs-10');
    toggledDiv.classList.add('cs-full-width');
  }
});

$(document).on('click', 'a', function(event) {
  var is_loading_settings = window.location.href.match('/settings\\?');

  if (is_loading_settings) {
    event.preventDefault();
  }
});

